            <div class="tab" id="#tab2">
                <?= self::parseRequest(); ?>
                <?= self::parseRoute(); ?>
                <?= self::parseRequestHeaders(); ?>
            </div>

            <div class="tab" id="#tab3">
                <?= self::parseResponseHeaders(); ?>
            </div>
