<body>
    <div class="wrapper">
        <div class="title">
            <strong><?= get_class($e); ?></strong>
            <?= $e->getMessage(); ?>
        </div>

        <div class="details">
            <div class="tabs">
                <a href="#tab1" class="active">Exception</a>
                <a href="#tab2">Request</a>
